<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="mp.parsa.mvvmtododb.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_tasksFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="mp.parsa.mvvmtododb.ui.addedittask.AddEditTaskFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_edit_task">
        <argument
            android:name="task"
            android:defaultValue="@null"
            app:argType="mp.parsa.mvvmtododb.data.db.entity.Task"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/deletedCompletedTasksDialogFragment"
        android:name="mp.parsa.mvvmtododb.ui.deletecompletedtasks.DeletedCompletedTasksDialogFragment"
        android:label="DeletedCompletedTasksDialogFragment" />
    <action
        android:id="@+id/action_global_deletedCompletedTasksDialogFragment"
        app:destination="@id/deletedCompletedTasksDialogFragment" />
</navigation>